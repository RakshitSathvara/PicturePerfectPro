<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c4c4c"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/img_profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_profilePic"
        android:layout_alignLeft="@+id/img_profilePic"
        android:text="full name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ccc"
        android:textSize="22sp"
        android:layout_marginLeft="110dp" />

    <TextView
        android:id="@+id/txt_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageView1"
        android:layout_alignTop="@+id/txt_fullName"
        android:layout_marginTop="32dp"
        android:text="followers/following"
        android:textColor="#ccc"
        android:textSize="12sp"
        android:layout_marginLeft="110dp" />

    <Button
        android:id="@+id/btn_editProfile"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img_profilePic"
        android:layout_alignLeft="@+id/img_profilePic"
        android:layout_marginLeft="106dp"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="#ccc"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txt_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_profilePic"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_profilePic"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Quick Search"
        android:imeOptions="actionSearch"
        android:inputType="text" />

    <TextView
        android:id="@+id/lbl_userCollections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_profilePic"
		android:layout_alignTop="@+id/txt_follow"
		android:layout_marginLeft="110dp"
		android:layout_marginTop="19dp"
        android:text=" collections"
        android:textColor="#ccc"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_exploreNrBy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_keyword"
        android:layout_alignParentBottom="true"

        android:text="Explore Nearby"
        android:textColor="#ccc" />

    <Button
        android:id="@+id/btn_searchUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_exploreNrBy"
        android:layout_alignLeft="@+id/btn_exploreNrBy"
        android:layout_alignRight="@+id/btn_exploreNrBy"
        android:text="Search User"
        android:textColor="#ccc" />

</RelativeLayout>