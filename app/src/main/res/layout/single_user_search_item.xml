<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_singleUserImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_singleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_singleUserImg"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_single_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_singleUserName"
        android:layout_below="@+id/txt_singleUserName"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_single_collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_single_followers"
        android:layout_below="@+id/txt_single_followers"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_single_follow_user"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img_singleUserImg"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_single_collections"
        android:background="#0b78ff"
        android:gravity="center"
        android:text="follow"
        android:textColor="#fff"
        android:textSize="12sp" 
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>
